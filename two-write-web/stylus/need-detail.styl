.detail
  margin-bottom 95px
  &_title
    height 30px
    line-height 30px
    color #666
  &_content
    width 890px
    height 575px
    padding-left 20px
    box-sizing border-box
    border 1px solid #ccc
    background #fff
    color #3c3c3c
    h2
      height 60px
      line-height 60px
      font-size 18px
      a
        float right
        margin-top -10px
        margin-right 20px
        font-size 16px
        color #3c3c3c
        img
          transform translate(-5px, 3px)
    section
      .detail_content_img
        text-align center
    .detail_content_box
      font-size 16px
      margin 20px 0
      .detail_content_box_left
        width 80px
        text-align right
        margin-top 15px
      .detail_content_box_right
        width 745px
        line-height 25px
        margin-left 10px
        padding 10px 10px 10px 5px
        font-size 14px
        border 1px solid #dfdfdf
  aside
    box-sizing border-box
    width 360px
    height 370px
    background #fff
    border 1px solid #ccc
    h2
      height 40px
      line-height 40px
      color #fff
      font-size 16px
      text-align center
      border-bottom 2px solid #ccc
      background #f00
    .aside_content
      padding 20px 0 0 20px
      line-height 35px
      font-family "Microsoft YaHei"
      font-size 16px
      color #666
      p
        b
          display inline-block
          width 80px
          text-align right
        span
          color #f00