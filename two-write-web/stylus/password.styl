.release
  margin-top 10px
  &_content
    width 265px
    height 735px
    padding-top 18px
    box-sizing border-box
    border 1px solid #ccc
    background #fff
    color #3c3c3c
    a
      color #000
    figure
      text-align center
    ul
      margin-top 18px
      border-top 1px dashed #000
      li
        height 62px
        line-height 62px
        font-size 20px
        text-align center
        cursor pointer
        &:nth-child(4)
          background #666
          a
            color: #fff
        &:hover
          background #666
          a
            color #fff
  aside
    box-sizing border-box
    width 992px
    height 735px
    background #fff
    border 1px solid #ccc
    form
      margin 50px 0 0 30px
      font-size 14px
      color #333
      div
        margin-bottom 22px
        label
          display inline-block
          width 100px
          text-align right
        input
          padding 3px 0
          padding-left 5px
          background: #fff
          color #333
          border 1px solid #ccc
          outline none
        a
          display inline-block
          width 70px
          height 30px
          margin-left 115px
          line-height 30px
          background #004986
          color #fff
          text-align center
          border-radius 5px