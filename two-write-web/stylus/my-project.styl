.release
  margin-top 10px
  &_content
    width 265px
    height 735px
    padding-top 18px
    box-sizing border-box
    border 1px solid #ccc
    background #fff
    color #3c3c3c
    a
      color #000
    figure
      text-align center
    ul
      margin-top 18px
      border-top 1px dashed #000
      li
        height 62px
        line-height 62px
        font-size 20px
        text-align center
        cursor pointer
        &:nth-child(2)
          background #666
          a
            color: #fff
        &:hover
          background #666
          a
            color #fff
  aside
    box-sizing border-box
    width 992px
    height 735px
    background #fff
    border 1px solid #ccc
    padding 0 25px
    p
      margin-top 25px
      font-size 14px
    table
      width 100% !important
      text-align center
      color #333
      thead
        height 55px
        line-height 55px
        th
          border-bottom 1px solid #bbb
          font-size 16px
          &:first-child
            text-align left
            padding-left 25px
      tbody
        height 44px
        line-height 44px
        font-size 14px
        tr
          border-bottom 1px dashed #ccc
        td:first-child
          text-align left
          padding-left 25px
        td:nth-child(2)
          color #f00
        td:nth-last-child(2)
          color #f00
.need_list
  height 80px
  line-height 80px
  font-size 22px
  &_item
    margin-left 50px
    color #474040
    a
      color #000
    &:hover
      text-shadow 4px 4px 4px #ced7db
.form_input
  width 275px