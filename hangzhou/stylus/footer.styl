footer
  font-family "Microsoft YaHei"
  margin-top 20px
  background #222
  article
    background #333
    section
      display flex
      background #000
      ul
        flex 1
        color #fff
        padding-top 30px
        background #333
        margin-right 1px
        padding-left 17px
        border 1px solid #3b3b3b
        &:nth-of-type(1)
          border-left none
        &:last-of-type
          margin-right  0
          border-right none
        li
          text-align left
          font-size 14px
          line-height 25px
          a
            color #fff
          &:first-child
            a
              color #8bcc4c
  aside
    color #fff
    p
      text-align center
      height 40px
      line-height 40px