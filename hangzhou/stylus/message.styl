h3
  height 30px
  margin-bottom 22px
  line-height 30px
  padding-left 8px
  border-bottom 1px solid #bababa
  color #bababa

main
  article
    overflow hidden
    aside
      float left
      text-align center
      font-size 20px
      ul
        li
          width 240px
          height 40px
          line-height 40px
          a
            color #666
          &:hover
            background #01af63
            a
              color #fff
    section
      width 885px
      padding-left 32px
      margin-bottom 108px
      float right
      border-left 1px solid #ccc
      form
        div
          margin-bottom 10px
          input[type="text"]
            width 255px
            height 25px
            padding-left 10px
            border 1px solid #ddd
          &:nth-of-type(5)
            textarea
              width 255px
              height 65px
              padding-left 10px
              resize none
              border 1px solid #ddd
          &:nth-of-type(6)
            input
              width 400px
          &:nth-of-type(7)
            textarea
              width 400px
              height 120px
              padding-left 10px
              resize none
              border 1px solid #ddd
          &:nth-of-type(8)
            a
              display inline-block
              width 80px
              height 20px
              line-height 20px
              text-align center
              border 1px solid #ccc
              color #444
              background #eee
              &:nth-of-type(1)
                margin-left 120px
                margin-right 10px
          label
            display inline-block
            font-size 14px
            width 70px
            text-align right
          span
            color #f00
            img
              margin 0 5px
              vertical-align middle
          textarea
            vertical-align top