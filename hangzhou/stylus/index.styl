    .content-box
      display flex
      flex 1
      justify-content center
      figure
        text-align center
        ul
          display flex
          width 280px!important
          flex-wrap wrap
          justify-content space-between
          li
            margin-top 10px
            width 140px
            text-align center
            &:hover
              background #ffb437
              a
                color #fff

.msg
  margin-top 20px!important

  aside
    text-align center
    h2
      margin-bottom 40px
    span
      padding-bottom 5px
      border-bottom 2px solid #1f974b
      font-size 20px

  section
    display flex
    .content-box
      display flex
      flex 1
      flex-direction column
      margin-left 20px
      h4
        font-size 16px
        color #01af63
      ul
        li
          line-height 22px
          color #666
          p
            float left
            width 280px
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
          span
            float right

